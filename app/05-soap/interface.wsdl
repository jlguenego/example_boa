<definitions>
    <types>
        <schema elementFormDefault="qualified" targetNamespace="http://tempuri.org/">
            <element name="AddRequest">
                <complexType>
                    <sequence>
                        <element minOccurs="1" maxOccurs="1" name="a" type="string"/>
                        <element minOccurs="1" maxOccurs="1" name="b" type="string"/>
                    </sequence>
                </complexType>
            </element>
            <element name="AddResponse">
                <complexType>
                    <sequence>
                        <element minOccurs="1" maxOccurs="unbounded" name="result" type="string"/>
                    </sequence>
                </complexType>
            </element>
            <element name="SubstractRequest">
                <complexType>
                    <sequence>
                        <element minOccurs="1" maxOccurs="1" name="a" type="string"/>
                        <element minOccurs="1" maxOccurs="1" name="b" type="string"/>
                    </sequence>
                </complexType>
            </element>
            <element name="SubstractResponse">
                <complexType>
                    <sequence>
                        <element minOccurs="1" maxOccurs="unbounded" name="result" type="string"/>
                    </sequence>
                </complexType>
            </element>
        </schema>
    </types>
    <message name="JLGSplitterSoapIn">
        <part name="parameters" element="AddRequest"/>
    </message>
    <message name="JLGSplitterSoapOut">
        <part name="parameters" element="AddResponse"/>
    </message>
    <message name="HelloWorldSoapIn">
        <part name="parameters" element="SubstractRequest"/>
    </message>
    <message name="HelloWorldSoapOut">
        <part name="parameters" element="SubstractResponse"/>
    </message>
    <portType name="JLGSplitterSoapPort">
        <!-- The operation name must be the same as the one specified in the service object -->
        <operation name="Add">
            <input message="JLGSplitterSoapIn"/>
            <output message="JLGSplitterSoapOut"/>
        </operation>
        <operation name="Substract">
            <input message="HelloWorldSoapIn"/>
            <output message="HelloWorldSoapOut"/>
        </operation>
    </portType>
    <binding name="JLGSplitterServiceSoapBinding" type="JLGSplitterSoapPort">
        <binding transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="Add">
            <operation soapAction="Add" style="document"/>
            <input>
                <body use="literal"/>
            </input>
            <output>
                <body use="literal"/>
            </output>
        </operation>
        <operation name="Substract">
            <operation soapAction="Substract" style="document"/>
            <input>
                <body use="literal"/>
            </input>
            <output>
                <body use="literal"/>
            </output>
        </operation>
    </binding>
    <service name="CalculatorService">
        <port name="CalculatorPort" binding="JLGSplitterServiceSoapBinding">
            <address location="http://localhost:8000/wsdl"/>
        </port>
    </service>
</definitions>